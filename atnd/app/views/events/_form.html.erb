<%= simple_form_for $event, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :date %>
  <%= f.input :place %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to "戻る", {:controller => "events", :action => "index"}, :class => 'btn' %>
  </div>
<% end %>
